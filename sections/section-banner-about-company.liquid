<div class="banner">
  <div class="page-width banner_container">
    <h2 class="banner_title text-center">{{ section.settings.title }}</h2>
    <div class="banner_wrapper">
      <div class="img_wrapper">
        <div class="banner_img-block">
          <img class="banner_img" src="https://th.bing.com/th/id/OIP.oCZt9i6ILm3HJWQp2YKjSwHaE8?w=140&h=93&c=7&r=0&o=5&pid=1.7" alt="logo">
        </div>
        <h2 class="boss_name name-text"><strong>Artem Alekseev</strong></h2>
        <h5 class="name-text">ArhiMED CEO</h2>
      </div>
      <div class="text_wrapper">
        <p class="banner_text text-center">{{ section.settings.text }}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .banner_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    padding: 0 3rem;
  }

  .text-center {
    text-align: center;
  }

  .img_wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .text_wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .banner_img-block {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;

  }

  .banner_img {
    /* width: 100%; */
    height: 100%;
    /* object-fit: contain; */
  }

  .name-text {
    margin: 0;
    letter-spacing: 1px;
  }

  .banner_text {
    font-style: italic;
    text-indent: 50px;
    
    position: relative;
  }

  .banner_text::before {
    content: "";
    background: url("https://cdn.shopify.com/s/files/1/0762/3373/6540/files/quotes.svg?v=1698007970") center/cover no-repeat;
    
    width: 40px;
    height: 30px;
    
    position: absolute;
    top: 0;
    left: 0;
  }
</style>

{% schema %}
{
  "name": "Banner about company",
  "tag": "section",
  "class": "section",
  "settings": [
    {
          "type": "text",
          "id": "title",
          "label": "Banner Title",
          "default": "<strong>Next generation</strong> MED and Beauty dev"
    },
    {
          "type": "text",
          "id": "text",
          "label": "Banner text",
          "default": "Crafted with love and care in Ukraine using ArhiMED TM innovation technologies to make the world better and your life easier."
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Banner about company"
    }
  ]
}
{% endschema %}
